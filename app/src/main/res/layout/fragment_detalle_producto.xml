<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp"
            android:background="#BBDEFB"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:padding="8dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerFotos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true" />

            <ImageButton
                android:id="@+id/btnFavorito"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:tint="#64B5F6"
                android:src="@drawable/ic_favorite_border"
                android:contentDescription="Marcar como favorito" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del producto"
            android:textSize="16sp"
            android:textColor="#1976D2"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="27,99 €"
            android:textSize="20sp"
            android:textColor="#0B3D91"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerTallas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#90CAF9"
            android:popupBackground="#BBDEFB" />

        <Button
            android:id="@+id/btnAgregarCesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir a mi cesta"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
