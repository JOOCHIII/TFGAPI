<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#E3F2FD"> <!-- Azul muy claro -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:foreground="?attr/selectableItemBackground"> <!-- Ripple en clic -->

        <ImageView
            android:id="@+id/ivProducto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Imagen del producto"
            android:src="@drawable/ic_placeholder"
            android:background="@drawable/bg_image_rounded" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre producto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#0D47A1" /> <!-- Azul fuerte -->

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad: 1"
                android:textSize="14sp"
                android:textColor="#1565C0" /> <!-- Azul medio -->

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: 10.00 â‚¬"
                android:textSize="14sp"
                android:textColor="#1565C0" />

            <TextView
                android:id="@+id/tvTalla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talla: M"
                android:textSize="14sp"
                android:textColor="#1565C0" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
