<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTitleUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil del Usuario"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:paddingBottom="20dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageViewUsuario"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/persona"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" />

        <!-- Nombre completo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre completo:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(nombre aquí)"
            android:textSize="18sp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Correo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewCorreoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(correo aquí)"
            android:textSize="18sp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Teléfono -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewTelefonoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(teléfono aquí)"
            android:textSize="18sp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/holo_blue_dark" />


    </LinearLayout>
</ScrollView>
