<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_primary"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_primary"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorSurface"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_margin="8dp"
            android:clipToPadding="false">

            <!-- Imagen centrada horizontalmente -->
            <ImageView
                android:id="@+id/imageViewAdmin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/persona"
                android:background="@drawable/circle_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="Perfil del Usuario"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Resto de campos y botones igual... -->
            <!-- Nombre -->
            <TextView
                android:text="Nombre completo"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_nombre_usuario"
                android:enabled="false"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Teléfono -->
            <TextView
                android:text="Teléfono"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_telefono_usuario"
                android:enabled="false"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Correo -->
            <TextView
                android:text="Correo"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_correo_usuario"
                android:enabled="false"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Contraseña -->
            <TextView
                android:text="Nueva Contraseña"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_nueva_contrasena_usuario"
                android:hint="Escribe nueva contraseña"
                android:padding="12dp"
                android:visibility="gone"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- Repetir Contraseña -->
            <TextView
                android:text="Repetir Contraseña"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_repetir_contrasena_usuario"
                android:hint="Repite la contraseña"
                android:padding="12dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Botón -->
            <Button
                android:id="@+id/btn_cambiar_contrasena_usuario"
                android:text="Cambiar Contraseña"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorPrimary"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
