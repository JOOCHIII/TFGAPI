<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="Foto producto" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivFoto"
            android:layout_marginStart="12dp"
            android:text="Nombre producto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Talla del producto -->
        <TextView
            android:id="@+id/tvTalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombre"
            android:layout_toEndOf="@id/ivFoto"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Talla: M"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <!-- Precio unitario -->
        <TextView
            android:id="@+id/tvPrecioUnitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTalla"
            android:layout_toEndOf="@id/ivFoto"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Precio unitario" />

        <!-- Cantidad -->
        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrecioUnitario"
            android:layout_toEndOf="@id/ivFoto"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textSize="16sp" />

        <!-- Botones + y - -->
        <LinearLayout
            android:id="@+id/layoutBotonesCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrecioUnitario"
            android:layout_toEndOf="@id/tvCantidad"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRestar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Restar cantidad"
                android:src="@drawable/baseline_remove_24" />

            <ImageButton
                android:id="@+id/btnSumar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sumar cantidad"
                android:src="@drawable/baseline_add_24"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Subtotal -->
        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvNombre"
            android:text="Subtotal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- BotÃ³n eliminar -->
        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvSubtotal"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Eliminar producto"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
