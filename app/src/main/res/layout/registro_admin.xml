<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegistroActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/blue_surface"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="?attr/colorSecondary"
                android:textSize="36sp"
                android:textStyle="bold" />

            <!-- Campos EditText -->
            <EditText
                android:id="@+id/txtnombreadmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/persona"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nombre y Apellidos"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHighlight="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/txtcorreoadmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHighlight="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/txttelefonoadmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Teléfono Móvil"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHighlight="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/txtusuarioadmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/persona"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHighlight="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/txtclaveadmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/candado"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHighlight="?attr/colorOnSurface" />

            <EditText
                android:id="@+id/txtrepetirclaveadmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/candado"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Confirmar Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHighlight="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btnregistraradmin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="REGISTRAR"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
