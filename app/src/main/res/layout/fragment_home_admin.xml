<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accesos rápidos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333"
            android:paddingBottom="16dp" />

        <!-- Card Horizontal Bonita -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Info a la izquierda -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestión de Productos"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tvTotalProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Productos: 125"
                        android:textSize="16sp"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/tvDraftProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En Borrador: 5"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:paddingBottom="12dp" />

                    <Button
                        android:id="@+id/btnAddNewProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="➕ Añadir Producto"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnViewAllProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋 Ver Todos"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnManageCategories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📂 Categorías"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Ícono a la derecha -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/persona"
                android:contentDescription="Icono Productos"
                android:tint="#888888"
                android:layout_marginStart="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
